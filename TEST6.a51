ORG 00H
JMP MAIN
ORG 40H
MAIN:
MOV TMOD, #20H
MOV TH1, #-3
SETB REN
SETB SM1
SETB TR1
AGAIN: 
JNB RI, $
CLR RI
MOV A SBUF
CJNE A,#"X", TRNO
MOV A, #"Y"
CALL TRANS
MOV A, #"E"
CALL TRANS
MOV A, #"S"
CALL TRANS
MOV A, #" "
JMP AGAIN
TRNO:    
MOV A, #"N"	  
CALL TRANS
MOV A, #"O"
CALL TRANS
MOV A, #" "
JMP AGAIN
TRANS:     MOV SBUF, A 
HERE:      JNB TI, $
		   CLR T1
		   RET 
		   END